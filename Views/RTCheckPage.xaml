<Page
    x:Class="Calculator.Views.RTCheckPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid Background="Transparent">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Spacing="8">
			<TextBlock Text="Enter 1st Side [a] :" Style="{StaticResource BaseTextBlockStyle}"/>
			<TextBox x:Name="SideATextBox" Width="200" HorizontalAlignment="Stretch" InputScope="Number"/>
			<TextBlock Text="Enter 2nd Side [b] :" Style="{StaticResource BaseTextBlockStyle}"/>
			<TextBox x:Name="SideBTextBox" Width="200" HorizontalAlignment="Stretch" InputScope="Number"/>
			<TextBlock Text="Enter 3rd Side [c]:" Style="{StaticResource BaseTextBlockStyle}"/>
			<TextBox x:Name="SideCTextBox" Width="200" HorizontalAlignment="Stretch" InputScope="Number"/>
			<Button Content="Check"
                    Click="CheckButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0"
                    Style="{StaticResource AccentButtonStyle}" />
            <TextBlock x:Name="ResultTextBlock" IsTextSelectionEnabled="True" Text="OUTPUT AREA" FontWeight="SemiBold" FontSize="12" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Page>