<Page
    x:Class="Calculator.Views.SIPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Background="Transparent">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Spacing="8">
            <TextBlock Text="Principal:" Style="{StaticResource BaseTextBlockStyle}"/>
            <TextBox x:Name="PrincipalTextBox" Width="200" HorizontalAlignment="Stretch"/>
            <TextBlock Text="Rate [%]:" Style="{StaticResource BaseTextBlockStyle}"/>
            <TextBox x:Name="RateTextBox" Width="200" HorizontalAlignment="Stretch"/>
            <TextBlock Text="Time [Years]:" Style="{StaticResource BaseTextBlockStyle}"/>
            <TextBox x:Name="TimeTextBox" Width="200" HorizontalAlignment="Stretch"/>
            <Button Content="Calculate"
                    x:Name="CalculateSIButton"
                    Click="CalculateSIButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0"
                    Style="{StaticResource AccentButtonStyle}" />
            <TextBlock x:Name="SimpleInterestTextBlock" Text="OUTPUT AREA" FontWeight="SemiBold" FontSize="12" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>