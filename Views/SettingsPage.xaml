<Page
    x:Class="Calculator.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Calculator.Helpers"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    mc:Ignorable="d"
    Padding="0">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>
    <Grid>
        <StackPanel Margin="30,0,0,0"
            x:Name="ContentArea">
            <TextBlock x:Uid="Settings_Personalization" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <TextBlock Text="Theme" />
                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                    <RadioButton
                        Content="Light"
                        Command="{x:Bind ViewModel.SwitchThemeCommand}"
                        IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}"
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Light</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton
                        Content="Dark"
                        Command="{x:Bind ViewModel.SwitchThemeCommand}"
                        IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}"
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Dark</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton
                        Content="Default"
                        Command="{x:Bind ViewModel.SwitchThemeCommand}"
                        IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default, Mode=OneWay}"
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Default</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                </StackPanel>
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Backdrop Effect" Style="{StaticResource BodyTextBlockStyle}" />
                    <ToggleSwitch
                       OnContent="Mica Alt"
                       OffContent="Acrylic"
                       IsOn="{x:Bind ViewModel.IsMicaAltEnabled, Mode=TwoWay}"
                       Margin="0,5,0,0" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="About" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                <HyperlinkButton Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" NavigateUri="https://github.com/Chill-Astro/Calculator/releases/tag/Latest">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="ms-appx:///Assets/Fonts/icomoon.ttf#icomoon"
                            Text="&#xe900;"
                            FontSize="18" VerticalAlignment="Center" />
                        <TextBlock Text="{x:Bind ViewModel.VersionDescription, Mode=OneWay}"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </HyperlinkButton>
                <HyperlinkButton Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" NavigateUri="https://github.com/Chill-Astro">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="ms-appx:///Assets/Fonts/icomoon.ttf#icomoon"
                   Text="&#xe90a;"
                   FontSize="18" VerticalAlignment="Center" />
                        <TextBlock Text=" Chill-Astro"
                   Margin="5,0,0,0"
                   VerticalAlignment="Center"/>
                    </StackPanel>
                </HyperlinkButton>
                <HyperlinkButton Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" NavigateUri="https://youtube.com/@artistic_astronaut">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="ms-appx:///Assets/Fonts/icomoon.ttf#icomoon"
                            Text="&#xe90b;"
                            FontSize="18" VerticalAlignment="Center" />
                        <TextBlock Text=" @artistic_astronaut"
                             Margin="5,0,0,0"
                             VerticalAlignment="Center"/>
                    </StackPanel>
                </HyperlinkButton>
                <TextBlock x:Uid="Settings_BackgroundEffect" Style="{ThemeResource SubtitleTextBlockStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
