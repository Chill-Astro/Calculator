<Page
    x:Class="Calculator.Views.CuboidDiagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid Background="Transparent">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Spacing="8">
			<TextBlock Text="Enter Length [l] :" Style="{StaticResource BaseTextBlockStyle}"/>
			<TextBox x:Name="LengthTextBox" Width="200" HorizontalAlignment="Stretch"/>
			<TextBlock Text="Enter Breadth [b] :" Style="{StaticResource BaseTextBlockStyle}"/>
			<TextBox x:Name="BreadthTextBox" Width="200" HorizontalAlignment="Stretch"/>
			<TextBlock Text="Enter Height [h] :" Style="{StaticResource BaseTextBlockStyle}"/>
			<TextBox x:Name="HeightTextBox" Width="200" HorizontalAlignment="Stretch"/>
			<Button Content="Calculate"
                    Click="CalculateButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0"
                    Style="{StaticResource AccentButtonStyle}" />
			<TextBlock x:Name="ResultTextBlock" Text="OUTPUT AREA" FontWeight="SemiBold" FontSize="12" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Page>