<Page
    x:Class="Calculator.Views.AreaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" Spacing="8">
            <ComboBox x:Name="ShapeComboBox" Width="230" HorizontalAlignment="Stretch" SelectedIndex="0" Background="Transparent" BorderThickness ="0" SelectionChanged="ShapeComboBox_SelectionChanged">
                <ComboBoxItem Content="Equilateral Triangle"/>
                <ComboBoxItem Content="Isosceles Triangle"/>
                <ComboBoxItem Content="Square"/>
                <ComboBoxItem Content="Rectangle / Parallelogram"/>
                <ComboBoxItem Content="Rhombus"/>
                <ComboBoxItem Content="Circle"/>
                <ComboBoxItem Content="Semi-circle"/>
            </ComboBox>
        </StackPanel>
        <Frame x:Name="ContentFrame" Margin="10,50,10,10"/>
    </Grid>
</Page>