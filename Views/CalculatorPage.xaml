<Page
    x:Class="Calculator.Views.CalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{x:Null}"
    KeyDown="CalculatorPage_KeyDown"
    Loaded="CalculatorPage_Loaded">
    <Page.Resources>
        <Style TargetType="Button" x:Key="CalculatorButtonStyle">
            <Setter Property="Background" Value="{ThemeResource ButtonBackground}" />
            <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="MinWidth" Value="55" />
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{TemplateBinding CornerRadius}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBackgroundPointerOver}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPointerOver}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <DoubleAnimation Duration="0" To="1.03" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX"/>
                                                <DoubleAnimation Duration="0" To="1.03" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBackgroundPressed}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPressed}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <DoubleAnimation Duration="0" To="0.97" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX"/>
                                                <DoubleAnimation Duration="0" To="0.97" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>
                            <ContentPresenter x:Name="ContentPresenter"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}"
                                      ContentTransitions="{TemplateBinding ContentTransitions}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="NumberButtonStyle" BasedOn="{StaticResource CalculatorButtonStyle}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="7"/>
        </Style>
        <Style TargetType="Button" x:Key="AccentButtonStyle" BasedOn="{StaticResource CalculatorButtonStyle}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBackgroundPointerOver}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Duration="0" To="1.03" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX"/>
                                            <DoubleAnimation Duration="0" To="1.03" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource AccentButtonBackgroundPressed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Duration="0" To="0.97" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX"/>
                                            <DoubleAnimation Duration="0" To="0.97" Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}"/>
        </Style>
    </Page.Resources>
    <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox Stretch="Uniform" StretchDirection="Both" Grid.Row="1" MaxHeight="120" Margin="0, -10, 0, 0" HorizontalAlignment="Right">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <TextBlock x:Name="OperationTextBlock"
                   Text=""
                   FontSize="7"
                   TextAlignment="Right"
                   HorizontalAlignment="Right"
                   Margin="12,-5,5,-5"
                   Opacity="0.7"/>
                <TextBlock x:Name="DisplayTextBlock"
                   Text="0"
                   FontSize="14"
                   TextAlignment="Right"
                   HorizontalAlignment="Right"
                   Margin="12,5,5,10"
                   FontWeight="SemiBold"
                   IsTextSelectionEnabled="True"/>
            </StackPanel>
        </Viewbox>
        <Grid Grid.Row="2" Margin="0"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="&#xe94c;" FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Margin="2" Grid.Row="0" Grid.Column="0" Style="{StaticResource CalculatorButtonStyle}" FontSize="15" Click="PercentButton_Click"/>
            <Button Content="CE" Margin="2" Grid.Row="0" Grid.Column="1" Style="{StaticResource CalculatorButtonStyle}" FontSize="16" Click="ClearEntryButton_Click"/>
            <Button Content="C"  Margin="2" Grid.Row="0" Grid.Column="2" Style="{StaticResource CalculatorButtonStyle}" FontSize="16" Click="ClearButton_Click"/>
            <Button FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Content="&#xe750;" Margin="2" Grid.Row="0" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}" FontSize="17" Click="BackspaceButton_Click"/>
            <Button Content="𝑥²" Margin="2" Grid.Row="1" Grid.Column="0" Style="{StaticResource CalculatorButtonStyle}" FontSize="16" Click="SquareButton_Click"/>
            <Button Content="√&#119909;" Margin="2" Grid.Row="1" Grid.Column="2" Style="{StaticResource CalculatorButtonStyle}" FontSize="17" Click="SquareRootButton_Click"/>
            <Button Content="³√&#119909;" Margin="2" Grid.Row="1" Grid.Column="1" Style="{StaticResource CalculatorButtonStyle}" FontSize="17" Click="CubeRootButton_Click"/>

            <Button FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Content="&#xE94A;"  Margin="2" Grid.Row="1" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}"  FontSize="14" Click="OperatorButton_Click"/>
            <Button Content="7" Margin="2" Grid.Row="2" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="8" Margin="2" Grid.Row="2" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="9" Margin="2" Grid.Row="2" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Content="&#xE947;"  Margin="2" Grid.Row="2" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}" FontSize="14" Click="OperatorButton_Click"/>

            <Button Content="4" Margin="2" Grid.Row="3" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="5" Margin="2" Grid.Row="3" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="6" Margin="2" Grid.Row="3" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Content="&#xE949;"  Margin="2" Grid.Row="3" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}" FontSize="14" Click="OperatorButton_Click"/>

            <Button Content="1" Margin="2" Grid.Row="4" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="2" Margin="2" Grid.Row="4" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="3" Margin="2" Grid.Row="4" Grid.Column="2" Style="{StaticResource NumberButtonStyle}"  FontSize="18" Click="NumberButton_Click"/>
            <Button Content="&#xE948;" FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Margin="2" Grid.Row="4" Grid.Column="3" Style="{StaticResource CalculatorButtonStyle}" FontSize="14" Click="OperatorButton_Click"/>

            <Button Content="𝑥&#x2B8;" Margin="2" Grid.Row="5" Grid.Column="0" Style="{StaticResource CalculatorButtonStyle}" FontSize="18" Click="PowerButton_Click"/>
            <Button Content="0" Margin="2" Grid.Row="5" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" FontSize="18" Click="NumberButton_Click"/>
            <Button Content="." Margin="2" Grid.Row="5" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" FontSize="24" Click="DecimalButton_Click"/>
            <Button Content="&#xe94e;" FontFamily="ms-appx:///Assets/Fonts/Segoe.ttf#Segoe Fluent Icons" Margin="2" Grid.Row="5" Grid.Column="3" Style="{StaticResource AccentButtonStyle}"   FontSize="15" Click="EqualsButton_Click"/>
        </Grid>
    </Grid>
</Page>